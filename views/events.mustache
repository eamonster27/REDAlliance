<!-- Page Content -->
<div class="container">

  <!-- Page Heading -->
  <h1 class="my-4">Page Heading
    <small>Secondary Text</small>
  </h1>

{{#eventItems}}
<div class="row">
  <div class="col-md-7">
    <div class="row text-center">
      <img class="img-fluid rounded mb-3 mb-md-0 eventImage" src="{{imageUrl}}" alt="">
    </div>
  </div>
  <div class="col-md-5">
    <h3>{{title}} - {{date}}</h3>
    <p>{{description}}</p>
    <a class="btn btn-primary join-btn" data-id="{{id}}" href="#">Join</a>
  </div>
</div>

<hr>
{{/eventItems}}

<script>
$(document).ready(function(){
  $(".join-btn").click(function(){
    obj = {};
    obj.id = $(this).data("id");
    console.log(obj)
    $.ajax({
        type: "POST",
        url: "/attend",
        data: JSON.stringify(obj),
        contentType:'application/json',
        success: function(data){alert(data);},
        failure: function(errMsg) {
            alert(errMsg);
        }
    });
  });
});
</script>


